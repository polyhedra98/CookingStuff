<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <android.support.v7.widget.CardView
            android:id="@+id/non_comment_image_card"
            android:layout_width="54dp"
            android:layout_height="54dp"
            app:cardCornerRadius="29dp"
            android:elevation="12dp"
            android:layout_alignParentStart="true">
            <ImageView
                android:layout_height="54dp"
                android:layout_width="match_parent"
                android:id="@+id/non_comment_avatar" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/non_comment_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/non_comment_image_card"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/non_comment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/non_comment_author"
            android:layout_toEndOf="@+id/non_comment_image_card"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/non_comment_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/non_comment_like"
            android:layout_alignBottom="@+id/non_comment_like"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="2dp"
            />

        <ImageButton
            android:id="@+id/non_comment_like"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:background="@null"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/non_comment_text"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/like_unchecked" />

    </RelativeLayout>
</android.support.v7.widget.CardView>